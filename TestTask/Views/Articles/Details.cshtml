@using System.Security.Claims;

@model FullArticleViewModel

@{
    ViewData["Title"] = "Details";
}

<div class="d-flex justify-content-center">
    <div class="w-75">
        <h2>@Model.Title</h2>
        <h4>@Model.Subtitle</h4>
        <p>
            @Model.CreationTime
        </p>
        <img class="card-image" src="data:image/png;base64,@(Convert.ToBase64String(Model.ImageFile!))" alt="Article image" width="80%" />
        <p style="white-space: pre-line">
            @Html.DisplayFor(model => model.Text)
        </p>
        @if (User.FindFirst(ClaimsIdentity.DefaultNameClaimType) != null)
        {
            <div>
                <a asp-action="Edit" asp-route-id="@Model?.Id">Редактировать</a> |
                <a asp-action="Delete" asp-route-id="@Model?.Id">Удалить</a>
            </div>
        }
        <div class="mt-3">
            <a asp-action="Index">Вернуться к новостям</a>
        </div>
    </div>
</div>